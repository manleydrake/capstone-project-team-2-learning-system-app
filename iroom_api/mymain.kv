<MyScreenManager>:
    LoginScreen:
    HomeScreen:
    ClassScreen:
    ClassroomScreen:
    MeetingReqScreen:
    ScheduleMeetingScreen:
    SendMessScreen:
    ViewMessScreen:
    InteractiveCScreen:
    VideoCScreen:
    OfficeHoursScreen:


<LoginScreen>
    name: "login"
    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2
            Label:
                text: "Username: "
            TextInput:
                id: username
                multiline: False
            Label:
                text: "Password: "
            TextInput:
                id: password
                multiline: False
        Button:
            text: "Login"
            on_release:
                app.root.current = 'home'
                root.manager.transition.direction = "left"



<HomeScreen>
    name: "home"
    GridLayout:
        cols:1
        size: root.width, root.height
        Label:
            text: "iRoom"
        Button:
            text: "Class 1"
            on_release:
                app.root.current = 'classes'
                root.manager.transition.direction = "left"
        Button:
            text: "Class 2"
            on_release:
                app.root.current = 'classes'
                root.manager.transition.direction = "left"
        Button:
            text: "Class 3"
            on_release:
                app.root.current = 'classes'
                root.manager.transition.direction = "left"
        Button:
            text: "Class 4"
            on_release:
                app.root.current = 'classes'
                root.manager.transition.direction = "left"
        Button:
            text: "Logout"
            on_release:
                app.root.current = 'login'
                root.manager.transition.direction = "right"


<ClassScreen>
    name: "classes"
    GridLayout:
        cols:1
        Button:
            text: "Home Screen"
            on_release:
                app.root.current = 'home'
                root.manager.transition.direction = "right"
        Label:
            text: "Insert className here:"
        Label:
            text: "Insert professorName here"
        Label:
            text: "Insert classTimes here"
        Label:
            text: "Insert classStatus here:"
        Button:
            text: "Join Class"
            on_release:
                app.root.current = 'classroom'
                root.manager.transition.direction = "left"
        Label:
            text: "Insert officeHours here"
        Button:
            text: "Join Office Hours"
            on_release:
                app.root.current = 'officehours'
                root.manager.transition.direction = "left"
        Button:
            text: "Request a Meeting"
            on_release:
                app.root.current = 'mtgreq'
                root.manager.transition.direction = "left"
        Button:
            text: "View Scheduled Meetings"
            on_release:
                app.root.current = 'schedmtg'
                root.manager.transition.direction = "left"
        Label:
            text: "Messaging"
        Button:
            text: "Send a Message"
            on_release:
                app.root.current = 'sendmess'
                root.manager.transition.direction = "left"
        Button:
            text: "View Messages"
            on_release:
                app.root.current = 'viewmess'
                root.manager.transition.direction = "left"

<ClassroomScreen>
    name: "classroom"

    GridLayout:
        cols:1
        GridLayout:
            cols: 2
            Button:
                text: "Home"
                on_release:
                    app.root.current = 'home'
                    root.manager.transition.direction = "right"
            Button:
                text: "Back"
                on_release:
                    app.root.current = 'classes'
                    root.manager.transition.direction = "right"
        Label:
            text: "How would you like to join today's class meeting?"
        Button:
            text: "JOIN INTERACTIVELY ONLY"
            on_release:
                app.root.current = 'classint'
                root.manager.transition.direction = "left"
        Label:
            text: "This device will only display interactive features; make sure to have the video meeting open on another device."
        Button:
            text: "JOIN INTERACTIVELY ONLY"
            on_release:
                app.root.current = 'classvideo'
                root.manager.transition.direction = "left"
        Label:
            text: "Both video and interactive features will be displayed on this device."

<InteractiveCScreen>
    name: "classint"
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            Button:
                text: "Home"
                on_release:
                    app.root.current = 'home'
                    root.manager.transition.direction = "right"
            Button:
                text: "Back"
                on_release:
                    app.root.current = 'classroom'
                    root.manager.transition.direction = "right"
        Label:
            text: "Please wait for your professor to launch interactive classroom features."
        Button:
            text: "Click here to answer before-class poll."

<VideoCScreen>
    name: "classvideo"
    GridLayout:
        cols: 1
        GridLayout:
            cols: 2
            Button:
                text: "Home"
                on_release:
                    app.root.current = 'home'
                    root.manager.transition.direction = "right"
            Button:
                text: "Back"
                on_release:
                    app.root.current = 'classroom'
                    root.manager.transition.direction = "right"
        Label:
            text: "Video will be displayed here when your professor starts the class session"
        Button:
            text: "Click here to answer before-class poll."


