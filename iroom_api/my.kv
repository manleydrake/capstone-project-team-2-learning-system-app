<MyScreenManager>:
    LoginScreen:
    HomeScreen:
    ClassScreen:

<LoginScreen>

    name: "login"

    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2
            Label:
                text: "Username: "
            TextInput:
                id: username
                multiline: False
            Label:
                text: "Password: "
            TextInput:
                id: password
                multiline: False
        Button:
            text: "Login"
            on_release:
                app.root.current = 'home'
                root.manager.transition.direction = "left"



<HomeScreen>
    name: "home"

    GridLayout:
        cols:1
        size: root.width, root.height
        Label:
            text: "iRoom"
        Button:
            text: "Class 1"
            on_release:
                app.root.current = 'classes'
                root.manager.transition.direction = "right"
        Button:
            text: "Class 2"
            on_release:
                app.root.current = 'classes'
                root.manager.transition.direction = "right"
        Button:
            text: "Class 3"
            on_release:
                app.root.current = 'classes'
                root.manager.transition.direction = "right"
        Button:
            text: "Class 4"
            on_release:
                app.root.current = 'classes'
                root.manager.transition.direction = "right"
        Button:
            text: "Logout"
            on_release:
                app.root.current = 'login'
                root.manager.transition.direction = "right"


<ClassScreen>
    name: "classes"

    GridLayout:
        cols:1

        Label:
            text: "Insert className here:"
        Label:
            text: "Insert professorName here"
        Label:
            text: "Insert classTimes here"
        Label:
            text: "Insert classStatus here:"
        Button:
            text: "Join Class"
            on_release:
                app.root.current = 'classroom'
                root.manager.transition.direction = "right"
        Label:
            text: "Insert officeHours here"
        Button:
            text: "Join Office Hours"
            on_release:
                app.root.current = 'officehours'
                root.manager.transition.direction = "right"
        Button:
            text: "Request a Meeting"
            on_release:
                app.root.current = 'mtgreq'
                root.manager.transition.direction = "right"
        Button:
            text: "View Scheduled Meetings"
            on_release:
                app.root.current = 'schedmtg'
                root.manager.transition.direction = "right"
        Label:
            text: "Messaging"
        Button:
            text: "Send a Message"
            on_release:
                app.root.current = 'sendmess'
                root.manager.transition.direction = "right"
        Button:
            text: "View Messages"
            on_release:
                app.root.current = 'viewmess'
                root.manager.transition.direction = "right"