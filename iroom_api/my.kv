<LoginScreen>

    username: username
    password: password

    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2
            Label:
                text: "Username: "
            TextInput:
                id: username
                multiline: False
            Label:
                text: "Password: "
            TextInput:
                id: password
                multiline: False
        Button:
            text: "Login"
            on_press: root.btn()


<HomeScreen>:
    Background:
        canvas:
            Rectangle:
                pos: 0, self.center_y
                size: self.width, 10
            Rectangle:
                pos: 0, 0
                size: self.width, 10
            
        Label:
            font_size: 70  
            center_x: root.width / 4
            top: root.top - 50
            text: "0"
        
        Label:
            font_size: 70  
            center_x: root.width * 3 / 4
            top: root.top - 50
            text: "0"
        
        AnchorLayout:
            Button:
                font_size: 70
                text: "HOME"
                anchor_x: "left"
                anchor_y: "bottom"
                size_hint: .2,.1


<Background>:
    FloatLayout:
        canvas.before:
            Color:
                rgba:0,1,0,1
            Rectangle:
                pos: self.pos
                size: self.size